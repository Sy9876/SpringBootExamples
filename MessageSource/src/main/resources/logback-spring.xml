<?xml version="1.0" encoding="UTF-8"?>
<!-- <configuration debug="true"> -->
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- 定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径 -->
    <property name="LOG_HOME" value="${user.dir}/logs/"/>
    <property name="APP_NAME" value="SpringbootExamples-MessageSource"/>


    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!-- 格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </layout>
        <!--  <encoder>
          <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
          <charset>UTF-8</charset>
        </encoder> -->
    </appender>

    <!-- 按照每天生成日志文件 -->
    <appender name="WriteLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 日志文件输出的文件名  使用size滚动时，需要包含%i,否则会报java.io.IOException: Stream Closed -->
            <FileNamePattern>${LOG_HOME}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log</FileNamePattern>
            <!-- 日志文件最大的大小 -->
            <maxFileSize>10MB</maxFileSize>
            <MaxHistory>30</MaxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!-- 格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </layout>
    </appender>


    <logger name="org.springframework" level="INFO"/>
<!--     <logger name="com.tuicr" level="DEBUG"/> -->

    <root level="INFO">
        <!--<appender-ref ref="Console"/>-->
        <appender-ref ref="WriteLog"/>
    </root>
</configuration>

